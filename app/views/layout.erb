  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraTravels</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <style>

     h1 {
        margin-left: 10px;
        color: darkgreen;
     }
     
     p, h2, h3, h4 {
       margin-left: 10px;
        color: darkgreen;
     }

    
    form {
      margin-left: 25px;
      font-size: 20px;
      color: teal;
      text-align:justify;
      max-width: 980px;
      margin-right: 30px;
    }


    label {
      display: inline-block;
      color: teal;
    }
  

      #header {
        display: inline;
        color: teal;
         margin-left: 10px;
      }
    
     .description_index {
       margin-left: 40px;
       margin-right: 20px;
       max-width: 980px;
       overflow: hidden;
       overflow-x: scroll;
       overflow-y: scroll;
       max-height: 150px;
     }
    
    .edit {
     margin-left: 20px;
     color: teal;
    }


    .user_list {
      margin-left: 15px;
      color: teal;
       }
    
    
    .description {
       margin-left: 20px;
       margin-right: 20px;
       max-width: 890px;
       overflow: hidden;
       text-overflow: ellipsis;
    }
    
    
    #user_description {
       max-width: 890px;
       max-height: 150px;
       color: teal;
        overflow: scroll;
    }
    
    
    
    .logout {
      float: right;
      display: inline;
      margin-right: 10px;
    }
    
    
    .links {
      float: right;
      display: inline;
      padding-left: 0;
      margin-right: 4px;
    }

    .links a:link, .links a:visited, .links a:hover, .links a:active {
      color: black;
        }
      a:visited {
        color: teal;
      }
    .welcome {
       display: inline;
       }
       .top_bar {
      background-color:
      teal;
      color: white;
      padding: 10px;
      }
     .flash {
         color: teal;
         font-size: 20px;
          font-weight: bold;
     }

   </style>


  </head>
  <body>
  
    <div class="wrapper">
    


    <% if Helpers.is_logged_in?(session) %>
    <p class="links"><a href="/logout" class="logout">Log Out</a></p>
     <p class="links"><a href="/users/<%=Helpers.current_user(session).id if Helpers.is_logged_in?(session)%>">My Travels</a></p>
     <p class="links"><a href="/travels/new">New Travel</a></p>
     <p class="links"><a href="/travels">All Travels</a></p>
     <p class="links"><a href="/users">All Users</a></p>
     <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>SinatraTravels</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
